@model IEnumerable <Wom.Models.StateModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{ int count = 0;}
<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">State List</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "State")" style="color:white">Home / Masters / State List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row animated bounceInDown">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Create", "State")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Add
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>State Name</th>
                                <th>State Type</th>
                                <th>Country</th>
                                <th>Edit</th>
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@{count++;} @count</td>

                        <td> @Html.DisplayFor(modelItem => item.StateName)</td>
                        <td> @Html.DisplayFor(modelItem => item.StateType)</td>
                        <td> @Html.Raw(Wom.DataLib.GetCellItems("Select CountryName From CountryModels Where CountryID =" + @Html.DisplayFor(modelItem => item.CountryID)))</td>
                        <td>
                            <a href="@Url.Action("Edit", "State",new { id = item.StateID })" class="btn btn-success btn-mini btn-outline-primary"><i class='icofont icofont-ui-edit'></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "State",new { id = item.StateID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-ui-close '></i></a>
                        </td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>