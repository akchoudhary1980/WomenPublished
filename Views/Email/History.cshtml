@model IEnumerable <Wom.Models.EmailTransModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    int count = 0;
}


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Email History</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Email")" style="color:white">Home / Masters / Email History List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Title</th>
                                <th>Message</th>
                                <th>Attached?</th>
                                <th>Device</th>
                                <th>Browser</th>
                                <th>Machine IP</th>                               
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@{count++;} @count</td>
                        <td> @Html.Raw(Wom.TextLib.GetDateDDMMYYYY(@Html.DisplayFor(modelItem => item.EmailDate)))</td>
                        <td> @Html.Raw(Wom.TextLib.GetTimeHHMM(@Html.DisplayFor(modelItem => item.EmailTime)))</td>
                        <td> @Html.Raw(Wom.DataLib.GetCellItems("Select CustomerName from CustomerModels Where Email ='" + (@Html.DisplayFor(modelItem => item.EmailTo))+"'"))</td>
                        <td> @Html.DisplayFor(modelItem => item.EmailTo)</td>
                        <td> @Html.DisplayFor(modelItem => item.EmailTitle)</td>
                        <td> @Html.DisplayFor(modelItem => item.EmailMessage)</td>
                        <td> @Html.DisplayFor(modelItem => item.AttachedFile)</td>
                        <td> @Html.DisplayFor(modelItem => item.Device)</td>
                        <td> @Html.DisplayFor(modelItem => item.Browser)</td>
                        <td> @Html.DisplayFor(modelItem => item.DeviceIP)</td>                        
                        <td>

                            <a href="@Url.Action("DeleteHistory", "Wom", new { id = item.EmailTransID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-user-alt-3'></i></a>
                        </td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


