@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .paytm {
        background-color: #EFEBE9;
        margin-top: 20px;
        padding: 20px;
    }
    .insta {
        background-color: #F9FBE7;
        margin-top: 20px;
        padding: 20px;
    }
</style>
<section class="mt-1">
    <div class="row">
        <div class="col-sm-12">
            <div class="card layout">
                <div class="card-block">
                    <div class="row mt-0">
                        <div class="col-sm-12">
                            <div class="d-flex align-items-center justify-content-center">
                                <img src="~/Test/Wom250x500.png" class="img-fluid" />
                            </div>
                        </div>
                    </div>
                    <h4>Please select payment gatway</h4>

                    <div class="row paytm">
                        <div class="col-sm-6">
                            <img src="~/Test/paytm.png" class="img-fluid" />
                        </div>
                        <div class="col-sm-4">
                            <h4>Paytm Payment Getway </h4>
                            <h6>100% free no exra charge</h6>
                            <h6>Success rate 99 %</h6>
                        </div>
                        <div class="col-sm-2">
                            <a href="@Url.Action("initiate", "Paytm")" class="btn btn-info rounded-0 float-right">Paytm</a>
                        </div>
                    </div>
                    <div class="row insta">
                        <div class="col-sm-6">
                            <img src="~/Test/instamozo.png" class="img-fluid" />                           
                        </div>
                        <div class="col-sm-4">
                            <h4>Instamojo Payment Getway </h4>
                            <h6>3% exra charge</h6>
                            <h6>Success rate 100 %</h6>
                            <h6>More payment option</h6>
                        </div>
                        <div class="col-sm-2">
                            <a href="@Url.Action("initiate", "Instamojo")" class="btn btn-success rounded-0 float-right">Instamojo</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>

</section>

