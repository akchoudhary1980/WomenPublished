@model IEnumerable <Wom.Models.PurchaseModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{ int count = 0;}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />


<!--for Open PDF File-->
<script type="text/javascript">
    // define here call here
    function OpenPDF() {
        window.open('../UploadFiles/Temp.pdf', '_blank');        
    }
</script>
@if (TempData["OpenPDFfile"] != null)
{
    // call here
    <script type="text/javascript">
      @Html.Raw(TempData["OpenPDFfile"])
    </script>
}

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Purchase List</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Purchase")" style="color:white">Home / Masters / Purchase List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Create", "Purchase")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Add
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Purchase Date</th>
                                <th>Vender Name</th>
                                <th>Invoice No</th>
                                <th>Invoice Date</th>
                                <th>PurchaseValue</th>
                                <th>PurchaseGST</th>
                                <th>PurchaseTotal</th>
                                <th>Print</th>
                                <th>Edit</th>
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@{count++;} @count</td>
                                <td> @Html.Raw(Wom.TextLib.GetDateDDMMYYYY(@Html.DisplayFor(modelItem => item.PurchaseDate)))</td>
                                <td> @Html.Raw(Wom.DataLib.GetCellItems("Select VenderName from VenderModels Where VenderID =" + (@Html.DisplayFor(modelItem => item.VenderID))))</td>
                                <td> @Html.DisplayFor(modelItem => item.InvoiceNo)</td>
                                <td> @Html.Raw(Wom.TextLib.GetDateDDMMYYYY(@Html.DisplayFor(modelItem => item.InvoiceDate)))</td>
                                <td class="text-right"> @Html.Raw(Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.PurchaseValue)))</td>
                                <td class="text-right"> @Html.Raw(Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.PurchaseGST)))</td>
                                <td class="text-right"> @Html.Raw(Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.PurchaseTotal)))</td>

                                <td>
                                    <a href="@Url.Action("PrintPreview", "Purchase",new { id = item.PurchaseID })" class="btn btn-info btn-mini btn-outline-info"><i class='icofont icofont-print'></i></a>
                                </td>

                                <td>
                                    <a href="@Url.Action("Edit", "Purchase",new { id = item.PurchaseID })" class="btn btn-success btn-mini btn-outline-primary"><i class='icofont icofont-ui-edit'></i></a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Delete", "Purchase",new { id = item.PurchaseID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-ui-close '></i></a>
                                </td>
                            </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


