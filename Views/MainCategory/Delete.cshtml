@model Wom.Models.MainCategoryModel
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-9">
                        <h3>@ViewData["PageTitle"]</h3>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-primary btn-outline-primary float-right"><i class="icofont icofont-ui-reply"></i> Back</a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <h4 class="sub-title">Delete This Records</h4>

                <form class="swa-confirm" asp-action="Delete">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="MainCategoryID" />
                    <input type="hidden" id="confirm" name="confirm" value="No" />

                    <div class="form-group row">
                        <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-6">
                            <input asp-for="CategoryName" class="form-control" placeholder="eg Category Name" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                        <label asp-for="IsDisplayOnMenu" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-2">
                            <div class="border-checkbox-section">
                                <div class="border-checkbox-group border-checkbox-group-primary">
                                    <input asp-for="IsDisplayOnMenu" class="border-checkbox" type="checkbox" id="checkbox1">
                                    <label class="border-checkbox-label" for="checkbox1">Yes</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Remark" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Remark" rows="3" cols="5" class="form-control"></textarea>
                            <span asp-validation-for="Remark" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <p>Product Picture 300px X 300px</p>
                            <img id="productPicture" src="~/UploadFiles/@Url.Content(Model.Picture)" alt="" class="img-fluid img-thumbnail" />
                        </div>
                        <div class="col-sm-4">
                            <input type='file' name="postedFile" onchange="uploadPicture(this);" class="btn btn-success btn-disabled pull-right" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="submit" id="btn_submit" value="Delete" class="btn btn-primary btn-out waves-effect md-trigger float-right" />
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <!-- Default card end -->
    </div>
</div>

