@model IEnumerable<Wom.Models.MainCategoryModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    int count = 0;
}
<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block ">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">@ViewData["PageTitle"]</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a asp-controller="Dashboard" asp-action="Index"> <i class="icofont icofont-home"></i> Home </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a asp-controller="Masters" asp-action="Index"> Masters </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "MainCategory")"> @ViewData["PageTitle"] </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row animated bounceInUp">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <h4>@ViewData["PageTitle"]</h4>
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Create", "MainCategory")" class="btn btn-primary btn-outline-primary float-right"><i class="icofont icofont-ui-add"></i> Add</a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Picture</th>
                                <th>Main Category</th>
                                <th>Display on Menu</th>
                                <th>Remark</th>
                                <th>Edit</th>
                                <th>Del</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@{count++;} @count</td>

                                @if (item.Picture == "")
                                {
                                    <td><img src="~/UploadFiles/product.png" alt="" height="50" /></td>
                                }
                                else
                                {
                                    <td><img src="~/UploadFiles/@item.Picture" alt="" height="50" /></td>
                                }
                                <td>@item.CategoryName</td>
                                <td>@if (item.IsDisplayOnMenu == true) {@Html.Raw("Yes")} else {@Html.Raw("No")}</td>
                                <td>@item.Remark</td>
                                <td><a asp-action="Edit" asp-route-id="@item.MainCategoryID" class="btn btn-success btn-mini btn-outline-primary"><i class="icofont icofont-ui-edit"></i></a></td>
                                <td><a asp-action="Delete" asp-route-id="@item.MainCategoryID" class="btn btn-danger btn-mini btn-outline-primary"><i class="icofont icofont-ui-close"></i></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


