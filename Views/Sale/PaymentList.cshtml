@model IEnumerable <Wom.Models.PaymentModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{ int count = 0;}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">@ViewData["PageTitle"]</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Registration")" style="color:white">Home / Masters / @ViewData["PageTitle"]</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            @*<div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Create", "Registration")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Add
                        </a>
                    </div>
                </div>
            </div>*@
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Transaction ID</th>
                                <th>Mode</th>
                                <th>Payment Getway</th>
                                <th>Sale No</th>
                                <th>Customer Name</th>
                                <th>Amount</th>
                                <th>Payment Status</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@{count++;} @count</td>
                        <td> @Wom.TextLib.GetLeftDate(@Html.DisplayFor(modelItem => item.RecieptDate))</td>
                        <td> @Html.DisplayFor(modelItem => item.TransactionID)</td>
                        <td> @Html.DisplayFor(modelItem => item.PaymentMode)</td>
                        <td> @Html.DisplayFor(modelItem => item.yPaymentGetwayName)</td>
                        <td> @Wom.DataLib.GetCellItems("Select SerialNo From SalesModels Where SalesID =" + @Html.DisplayFor(modelItem => item.SaleID))</td>
                        <td> @Wom.DataLib.GetCellItems("Select CustomerName From CustomerModels Where CustomerID =" + @Html.DisplayFor(modelItem => item.CustomerID))</td>
                        <td class="text-right"> @Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.Amount))</td>
                        <td> @Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

