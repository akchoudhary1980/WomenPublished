@model IEnumerable <Wom.Models.SalesModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{ int count = 0;}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<!--for Open PDF File-->
<script type="text/javascript">
    // define here call here
    function OpenPDF() {
        window.open('../UploadFiles/Temp.pdf', '_blank');
    }
</script>
@if (TempData["OpenPDFfile"] != null)
{
    // call here
    <script type="text/javascript">
      @Html.Raw(TempData["OpenPDFfile"])
    </script>
}

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Sale List</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Sale")" style="color:white">Home / Masters / Sale List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Create", "Sale")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Add
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Invoice No</th>
                                <th>Sale Date</th>
                                <th>Customer Name</th>
                                <th>Sale Value</th>
                                <th>Sale GST</th>
                                <th>Sale Total</th>
                                <th>Confirm</th>
                                <th>Print</th>
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                            //string prefix = DataLib.GetCellItems("Select InvoicePrefix From CompanyModels Where CompanyID=" + @Html.DisplayFor(modelItem => item.CompanyID));           
                    <tr>
                        <td>@{count++;} @count</td>
                        <td> @Html.DisplayFor(modelItem => item.SerialNo)</td>
                        <td> @Html.Raw(Wom.TextLib.GetLeftDate(@Html.DisplayFor(modelItem => item.SalesDate)))</td>
                        <td> @Html.Raw(Wom.DataLib.GetCellItems("Select CustomerName from CustomerModels Where CustomerID =" + (@Html.DisplayFor(modelItem => item.CustomerID))))</td>

                        <td> @Html.Raw(Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.SaleValue)))</td>
                        <td> @Html.Raw(Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.SaleGST)))</td>
                        <td> @Html.Raw(Wom.TextLib.IndianRuppes(@Html.DisplayFor(modelItem => item.SaleTotal)))</td>

                        <td>
                            <a href="@Url.Action("Confirm", "Sale",new { id = item.SalesID })" class="btn btn-info btn-mini btn-outline-info"><i class='icofont icofont-ui-check'></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("PrintPreview", "Sale",new { id = item.SalesID })" class="btn btn-info btn-mini btn-outline-info"><i class='icofont icofont-print'></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Sale",new { id = item.SalesID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-ui-close '></i></a>
                        </td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


