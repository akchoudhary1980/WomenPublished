@model Wom.Models.SubCategoryModel
@{  
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<script type="text/javascript">
    // main picture
    function uploadPicture(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#productPicture')
                    .attr('src', e.target.result)
                    .width(300)
                    .height(300);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-9">
                        <h3>@ViewData["PageTitle"]</h3>
                    </div>
                    <div class="col-md-3">
                        <a asp-action="Index" class="btn btn-primary btn-outline-primary float-right"><i class="icofont icofont-ui-reply"></i> Back</a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <h4 class="sub-title">Edit Records</h4>
                <form method="post" enctype="multipart/form-data"  asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SubCategoryID" />

                    <div class="form-group row">
                        <label asp-for="CategoryName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="CategoryName" class="form-control" />
                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="MainCategoryID" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="MainCategoryID" class="form-control" asp-items="@Lis.Controllers.SubCategoryController.GetMainCategoryList()"> </select>
                            <span asp-validation-for="MainCategoryID" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Remark" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Remark" rows="3" cols="5" class="form-control"></textarea>
                            <span asp-validation-for="Remark" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            <p>Product Picture 300px X 300px</p>
                            <img id="productPicture" src="~/UploadFiles/@Url.Content(Model.Picture)" alt="" class="img-fluid img-thumbnail" />
                        </div>
                        <div class="col-sm-4">
                            <input type='file' name="postedFile" onchange="uploadPicture(this);" class="btn btn-success pull-right" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <input type="submit" value="Update" class="btn btn-primary btn-out float-right" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- Default card end -->
    </div>
</div>

