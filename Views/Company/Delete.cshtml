@model Wom.Models.CompanyModel
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
    <div class="page-header animated bounceInRight">
        <div class="card">
            <div class="card-block bg-primary">
                <div class="row ">
                    <div class="col-lg-4">
                        <h5 class="text-uppercase font-weight-bold">Delete Employee</h5>
                    </div>
                    <div class="col-lg-8 align-items-end">
                        <div class="page-header-breadcrumb">
                            <ul class="breadcrumb-title">
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="@Url.Action("Index", "Employee")" style="color:white">Home / Masters / Delete Employee</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class="row animated bounceInDown">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Index", "Employee")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block table-border-style">
                <div class="table-responsive">
                    <table class="table table-styling">
                        <tbody>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.EmployeeName)</b></td>
                                <td>@Html.DisplayFor(model => model.EmployeeName)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.NicName)</b></td>
                                <td>@Html.DisplayFor(model => model.NicName)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Gender)</b></td>
                                <td>@Html.DisplayFor(model => model.Gender)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Address)</b></td>
                                <td>@Html.DisplayFor(model => model.Address)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.City)</b></td>
                                <td>@Html.DisplayFor(model => model.City)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.State)</b></td>
                                <td>@Html.DisplayFor(model => model.State)</td>
                            </tr>

                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.DesignationID)</b></td>
                                <td>@Html.DisplayFor(model => model.DesignationID)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Salary)</b></td>
                                <td>@Html.DisplayFor(model => model.Salary)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Qualification)</b></td>
                                <td>@Html.DisplayFor(model => model.Qualification)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Mobile)</b></td>
                                <td>@Html.DisplayFor(model => model.Mobile)</td>
                            </tr>

                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Whatup)</b></td>
                                <td>@Html.DisplayFor(model => model.Whatup)</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Email)</b></td>
                                <td>@Html.DisplayFor(model => model.Email)</td>
                            </tr>

                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Picture)</b></td>
                                <td><img src="~/UploadFiles/@Html.DisplayFor(model => model.Picture)" alt="" height="50" /></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr />
                <div class="col-md-12 col-12 float-right">
                    @using (Html.BeginForm("Delete", "Employee", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.EmployeeID)
                        <div class="form-group row">
                            <div class="col-sm-6">
                            </div>
                            <div class="col-sm-6">
                                <input type="submit" value="Delete" class="btn btn-danger btn-out float-right" style="margin-left:10px;" />
                                <a href="@Url.Action("Index", "Employee")" class="btn btn-success btn-outline-primary float-right">
                                    <i class="icofont icofont-user-alt-3"></i> Cancel
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>       
    </div>
</div>





