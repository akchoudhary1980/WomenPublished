@model Wom.Models.PaymentInitiateModel
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="mt-4 mb-4">  
 <div class="row">
                        <div class="col-md-2"></div>
                        <div class="col-md-8 ">
                            <h3>Initiated payments</h3>
                            <hr />
                            <br />
                            @using (Html.BeginForm("QRCode", "Paytm", FormMethod.Post))
                            {
                                @*@using (Html.BeginForm("CreateOrder", "Paytm", FormMethod.Post))
                                {*@
                                    @Html.AntiForgeryToken()

                                    <div class="form-group row mb-2">
                                        <label for="name" class="col-sm-3">Name</label>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label for="name" class="col-sm-3">Email</label>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label for="name" class="col-sm-3">Contact Number</label>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row mb-2">
                                        <label for="name" class="col-sm-3">Address</label>
                                        <div class="col-sm-9">
                                            @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row mb-2">
                                        <label for="name" class="col-sm-3">Amount</label>
                                        <div class="col-sm-9">
                                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row mb-2">
                                        <div class="col-sm-12">
                                            <input type="submit" value="Pay Now" class="more-product no-link-white float-end" />
                                        </div>
                                    </div>
                                }
                            </div>
                    </div>                
</section>