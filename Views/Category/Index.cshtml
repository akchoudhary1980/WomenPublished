@model IEnumerable <Wom.Models.CategoryModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}
@{ int count = 0;}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Category List</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Category")" style="color:white">Home / Masters / Category List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row animated bounceInUp">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Create", "Category")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Add
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Picture</th>
                                <th>Catagory Name</th>
                                <th>Remark</th>
                                <th>Edit</th>
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@{count++;} @count</td>
                        @if (item.Picture == "")
                        {
                            <td><img src="~/UploadFiles/product.png" alt="" height="50" /></td>
                        }
                        else
                        {
                            <td><img src="~/UploadFiles/@item.Picture?"+ @DateTime.Now.TimeOfDay alt="" height="50" /></td>
                        }

                        <td> @Html.DisplayFor(modelItem => item.CategoryName)</td>
                        <td> @Html.DisplayFor(modelItem => item.Remark)</td>
                        <td>
                            <a href="@Url.Action("Edit", "Category",new { id = item.CategoryID })" class="btn btn-success btn-mini btn-outline-primary"><i class='icofont icofont-ui-edit'></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Category",new { id = item.CategoryID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-ui-close '></i></a>
                        </td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

