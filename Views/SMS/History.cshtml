@model IEnumerable <Wom.Models.WomTransModel>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    int count = 0;
}


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Wom History List</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Unit")" style="color:white">Home / Masters / Wom History List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>                   
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th>Customer</th>
                                <th>Mobile</th>
                                <th>Message</th>                                
                                <th>Wom Count</th>                               
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@{count++;} @count</td>
                        <td> @Html.Raw(Wom.TextLib.GetDateDDMMYYYY(@Html.DisplayFor(modelItem => item.WomDate)))</td>
                        <td> @Html.Raw(Wom.TextLib.GetTimeHHMM(@Html.DisplayFor(modelItem => item.WomTime)))</td>
                        <td> @Html.Raw(Wom.DataLib.GetCellItems("Select CustomerName from CustomerModels Where Mobile ='" + (@Html.DisplayFor(modelItem => item.Mobile))+"'"))</td>
                        <td> @Html.DisplayFor(modelItem => item.Mobile)</td>
                        <td> @Html.DisplayFor(modelItem => item.WomMessage)</td>                        
                        <td> @Html.DisplayFor(modelItem => item.WomCount)</td>
                        <td>
                           <a href="@Url.Action("DeleteHistory", "Wom", new { id = item.WomTransID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-user-alt-3'></i></a>
                        </td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


